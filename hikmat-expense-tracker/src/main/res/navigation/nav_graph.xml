<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hikmat.expense.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />
    
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.hikmat.expense.ui.report.ReportFragment"
        tools:layout="@layout/fragment_report" />
    
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.hikmat.expense.ui.add.AddExpenseFragment"
        tools:layout="@layout/fragment_add_expense" />

    <action
        android:id="@+id/action_homeFragment_to_reportFragment"
        app:destination="@id/reportFragment" />

    <action
        android:id="@+id/action_homeFragment_to_addExpenseFragment"
        app:destination="@id/addExpenseFragment" />

</navigation>